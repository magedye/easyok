# -----------------------------
# EasyData Configuration Example
# Copy this file to `.env` and set appropriate values
# -----------------------------

# Database options (user data)
DB_TYPE=oracle   # oracle | mssql
DB_HOST=localhost
DB_PORT=1521
DB_NAME=ORCL
DB_USER=your_user
DB_PASSWORD=your_password

#DATA_ORACLE_DSN=10.10.10.10:1521/XEPDB1
#DATA_ORACLE_USER=MAJED
#DATA_ORACLE_PASSWORD=StrongPass123

# System database options (logs & metadata)
SYSTEM_DB_TYPE=sqlite  # sqlite | postgres
SYSTEM_DB_PATH=./data/logs.db  # used when SYSTEM_DB_TYPE=sqlite
SYSTEM_DB_HOST=localhost
SYSTEM_DB_PORT=5432
SYSTEM_DB_NAME=easydata
SYSTEM_DB_USER=easydata
SYSTEM_DB_PASSWORD=password

# Vector store
VECTOR_STORE_TYPE=chroma   # chroma | qdrant
VECTOR_STORE_PATH=./data/vectorstore  # persistent directory for embeddings

# Language model
LLM_PROVIDER=openai   # openai | google | openai_compatible | ollama
OPENAI_API_KEY=
GOOGLE_API_KEY=
OLLAMA_MODEL=llama3  # name of the local model to use (only for ollama)

# ----------------------------------------------------------------------------
# PHI-3 (OpenAI-compatible, Self-hosted)
# ----------------------------------------------------------------------------
PHI3_API_KEY=not-needed-for-local
PHI3_MODEL=phi-3
PHI3_BASE_URL=http://10.10.10.1:1234/v1


# ----------------------------------------------------------------------------
# GROQ (Official SDK)
# ----------------------------------------------------------------------------
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GROQ_MODEL=llama-3.1-8b-instant

# ----------------------------------------------------------------------------
# Shared LLM Controls
# ----------------------------------------------------------------------------
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=2048

# Feature toggles
ENABLE_SECURITY=true    # toggle JWT enforcement
ENABLE_LOGGING=true     # toggle structured logging
ENABLE_RATE_LIMIT=false # toggle rate limiting middleware
ENABLE_PERFORMANCE=true # toggle compression/cache middleware

# Other settings
RAG_TOP_K=5  # number of similar questions to retrieve
MAX_SQL_TOKENS=2000  # limit for generated SQL tokens
